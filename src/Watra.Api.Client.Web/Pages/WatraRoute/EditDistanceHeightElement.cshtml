@page
@model Watra.Client.Web.ViewModel.WatraRouteHeightDistanceElementViewModel

@{
    ViewData["Title"] = "Distanz/ - Höhenelement bearbeiten";
}

<h1>Distanz/ - Höhenelement bearbeiten</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.HiddenFor(model => model.Id)
            </div>
            <div class="form-group">
                @Html.HiddenFor(model => model.IdRoute)
            </div>
            <div class="form-group">
                Länge
                <input asp-for="Length" class="form-control" />
                <span asp-validation-for="Length" class="text-danger"></span>
            </div>
            <div class="form-group">
                Höhenunterschied
                <input asp-for="HeightDifference" class="form-control" />
                <span asp-validation-for="HeightDifference" class="text-danger"></span>
            </div>
            <div class="form-group">
                Sortierung
                <input asp-for="SortOrder" class="form-control" />
                <span asp-validation-for="SortOrder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Speichern" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="Calculator">Abbrechen</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
