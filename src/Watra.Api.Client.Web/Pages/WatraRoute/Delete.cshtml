@page
@model Watra.Client.Web.ViewModel.WatraRouteDeleteViewModel

@{
    ViewData["Title"] = "Watra Route löschen";
}

<h1>Löschen - Wassertransport: @Model.Name</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.HiddenFor(model => model.Id)
            </div>
            <div class="form-group">
                <input type="submit" value="löschen" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="Calculator">Abbrechen</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
